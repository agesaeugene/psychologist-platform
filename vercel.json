{
    "version": 2,
    "builds": [
        {
            "scr": "project/wsgi.py",
            "use": "@vercel/python",
            "config": { "MaxLambdaSize": "15mb", "runtime": "python3.10" }
        },
        {
            "scr": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDIr": "staticfiles_build"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "projct/wsgi.py"
        }
    ]
}
